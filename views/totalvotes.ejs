<div style="color:#000; clear:both;width:900px;margin:0px auto;font-size:25px;">
<div style="width: 360px; margin: 0px auto;">
	<h2 style="margin-top:20px; text-align: center; background: #000;color:#FAC101;border-radius: 150px 20px 150px 20px;margin-bottom:40px;width: 360px;padding: 10px;">All Counted Votes Result</h2>
	</div>
	<div style="margin-top:30px;margin-left:30px; padding: 10px 0px 40px 100px; background: #FFF;border-radius: 150px 20px 150px 24px; font-size: 20px; width:750px;border:solid 2px #FAC101; ">
	
		<% if(record.length>0) {%>
			<h4 style="color: #FAC101;"><div style="float: left;width: 300px;">Candidate Name</div><div style="float: left;">Totals Votes</div></h4>
		<% for (var i = 0; i < record.length; i++) { %>
		<!-- <h4><span style="margin-right:88px; ">VoterID:</span><%= record[i].VoterId %></h4> -->
		<div style="clear:both;float:left;width:300px; font-size: 18px;padding-bottom: 5px;"><%= record[i].Name %></div>
		<div style="float:left;font-size: 18px;"><%= record[i].votes %></div>
	  <% } %>
		  <% } else {%>
			  <h3 style="color:crimson; font-size:18px;">Sorry! No Vote Exist</h3>
			  <% } %>
