<html>
  <head>
      <link rel="stylesheet" href="/style.css" type="text/css" />
<style>
.design
{
  width:800px;
  
  border-radius: 150px 20px 150px 20px;
}
.input
{
  width:400px;
}
.form-field
{
  margin-left: 160px;
  font-size:21px;
}
.btn
{
  margin:0px auto;
  width:300px;
  border-radius: 150px 20px 150px 20px;
}

</style>

  </head>
<body style="background:#21CB65;">

  
  <div class="main" style="border-radius: 20px 150px 20px 150px;">
  <h2 style="margin:30px auto; width:700px;color:#FAC101;">Welcome to Hyper ledger  
      E-Voting Blockchain Interface </h2>
  </div>
  <div style="width: 800px;">
  
      <% for(var i=0 ; i < errors.length; i++) { %>
        <div class="error"><%= errors[i] %></div>
        <% } %>
      </div>
  <div class="design">
      <h2 style="margin-top:20px; text-align: center; background: #000;color:#fff;border-radius: 150px 20px 150px 20px;width: 400px;padding: 5px;"> Welcome To Admin Login Page</h2>
    <div>
    <form action="/login_c" method="post" style="border:solid 2px #FAC101">
      
      <div class="form-field">
        
       
        <input placeholder="Enter Email Address"  class="input" type="email" class="form-control" name="email" required>
      </div>
      <div class="form-field">
          
          <input placeholder="***********" class="input" type="password" class="form-control" name="password" required>
        </div>
        <div class="form-field">
          
          <input type="hidden" class="input" name="list" value="Admin" required>
          
        </div>
       
      <button type="submit" class="btn btn-primary">Login</button>
      

    </form>
  </div>
  </div>
  </body>
  </html>