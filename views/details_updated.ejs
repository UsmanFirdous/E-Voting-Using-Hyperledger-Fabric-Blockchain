    <h3 style="margin-top:20px; text-align: center; background: #000;color:#fff;border-radius: 150px 20px 150px 20px;width: 280px;padding: 8px;">Voter Record ready for updation</h3>
    <form action="/details_updated_c" method="post">
      <div class="form-field">
        <label for="Name">Name</label>
        <input class="input" type="text" value="<%= voters.Name %>" class="form-control" name="name" required>
      </div>
      <div class="form-field">
        <label for="CNIC">Employee ID</label>
        <input class="input" type="text" value="<%= voters.CNIC %>" class="form-control" name="cnic" required>
      </div>
      <div class="form-field">
          <label for="CNIC">VoterID</label>
          <input class="input" type="text" value="<%= voters.VoterId %>" class="form-control" name="voterid" required>
        </div>
      <div class="form-field">
        <label for="Fname">F-Name</label>
        <input class="input" type="text" value="<%= voters.Fname %>" class="form-control" name="fname" required>
      </div>
      <div class="form-field">
        <label for="Email">Email</label>
        <input class="input" type="email" value="<%= voters.Email %>" class="form-control" name="email" required>
      </div>
      
      <div class="form-field">
    
        <input class="input" type="hidden" value="<%= voters.Halka %>" class="form-control" name="halka" required>
      </div>
      <input type="hidden" name="id" value="<%= voters._id %>">
      <button type="submit" class="btn btn-primary">Update</button>
    </form>
